<nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Inicio", root_path, class: "btn btn-link p-0 m-0" %></li>
    <li class="breadcrumb-item"><%= link_to "Posts", posts_path, class: "btn btn-link p-0 m-0" %></li>
    <li class="breadcrumb-item"><%= link_to @post.caption, post_path(@post), class: "btn btn-link p-0 m-0" %></li>
    <li class="breadcrumb-item active">Editar</li>
  </ol>
</nav>

<div class="card shadow" data-controller="form-validation">
  <div class="card-header">
    <h2>Editar publicación</h2>
  </div>
  <div class="card-body">
    <%= form_with model: @post, 
                  local: true, 
                  html: { 
                    multipart: true, 
                    id: "post-form",
                    data: { 
                      form_validation_target: "form",
                      action: "submit->form-validation#validateForm"
                    }
                  } do |f| %>
      
      <% if @post.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h5>Corrige los siguientes errores:</h5>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mb-3" role="group" aria-labelledby="caption-label">
        <%= f.label :caption, "Descripción", id: "caption-label", class: "form-label" %>
        <%= f.text_area :caption, 
                       class: "form-control", 
                       rows: 3, 
                       required: true,
                       aria-required: "true",
                       aria-describedby: "caption-error",
                       data: { form_validation_target: "field" },
                       id: "post-caption" %>
        <div id="caption-error" class="invalid-feedback" role="alert" data-form-validation-target="error"></div>
      </div>
      
      <div class="mb-3" role="group" aria-labelledby="location-label">
        <%= f.label :location, "Ubicación (opcional)", id: "location-label", class: "form-label" %>
        <%= f.text_field :location, 
                        class: "form-control",
                        aria-describedby: "location-help",
                        data: { form_validation_target: "field" },
                        id: "post-location" %>
        <div id="location-help" class="form-text">Ejemplo: Ciudad, País</div>
      </div>
      
      <div class="card mb-3">
        <div class="card-header">
          <h5>Imagen de la publicación</h5>
          <% if @post.images.any? %>
            <div class="mt-2">
              <p>Imagen actual:</p>
              <% if @post.images.first.image_url.present? %>
                <% image_url = @post.images.first.image_url %>
                <% image_url = "http://#{image_url}" unless image_url.start_with?('http://', 'https://') %>
                <img src="<%= image_url %>" class="img-thumbnail" style="max-height: 200px;" alt="Imagen actual del post">
              <% elsif @post.images.first.file.attached? %>
                <%= image_tag url_for(@post.images.first.file), class: "img-thumbnail", style: "max-height: 200px;", alt: "Imagen actual del post" %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <div class="mb-3" role="group" aria-labelledby="image-url-label">
            <%= f.label :image_url, "URL de la imagen", id: "image-url-label", class: "form-label" %>
            <%= f.text_field :image_url, 
                           class: "form-control", 
                           placeholder: "https://ejemplo.com/imagen.jpg",
                           value: (@post.images.first&.image_url || ""),
                           aria-describedby: "image-url-help",
                           data: { form_validation_target: "field" },
                           id: "post-image-url" %>
            <div id="image-url-help" class="form-text">Puedes usar cualquier URL de imagen pública de internet</div>
          </div>
          
          <div class="mb-3">
            <p class="text-center">- O -</p>
          </div>
          
          <div class="mb-3" role="group" aria-labelledby="file-label">
            <%= f.label :file, "Subir imagen desde tu dispositivo", id: "file-label", class: "form-label" %>
            <%= f.file_field :file, 
                           class: "form-control", 
                           accept: "image/*",
                           aria-describedby: "file-help",
                           data: { form_validation_target: "field" },
                           id: "post-file" %>
            <div id="file-help" class="form-text">Formatos aceptados: JPG, PNG, GIF</div>
          </div>
        </div>
      </div>
      
      <div class="mb-3" role="group" aria-labelledby="hashtags-label">
        <%= f.label :hashtag_list, "Hashtags (opcional)", id: "hashtags-label", class: "form-label" %>
        <%= f.text_field :hashtag_list, 
                        class: "form-control", 
                        placeholder: "Escribe hashtags separados por comas (sin #)",
                        value: @hashtag_list,
                        aria-describedby: "hashtags-help",
                        data: { form_validation_target: "field" },
                        id: "post-hashtags" %>
        <div id="hashtags-help" class="form-text">Ejemplo: naturaleza, viajes, comida</div>
      </div>
      
      <div class="form-actions mt-4">
        <%= f.submit "Guardar cambios", 
                    class: "btn btn-primary",
                    data: { form_validation_target: "submit" } %>
        <%= link_to "Cancelar", post_path(@post), class: "btn btn-secondary ms-2" %>
      </div>
    <% end %>
  </div>
</div>
