<div class="card shadow">
  <div class="card-header">
    <h2>Crear nueva publicación</h2>
  </div>
  <div class="card-body">
    <%= form_with model: @post, local: true, html: { multipart: true, id: "post-form" } do |f| %>
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mb-3">
        <%= f.label :caption, "Descripción" %>
        <%= f.text_area :caption, class: "form-control", rows: 3, required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :location, "Ubicación (opcional)" %>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      
      <div class="card mb-3">
        <div class="card-header">
          <h5>Imagen de la publicación</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <%= f.label :image_url, "URL de la imagen" %>
            <%= f.text_field :image_url, class: "form-control", placeholder: "https://ejemplo.com/imagen.jpg" %>
            <div class="form-text">Puedes usar cualquier URL de imagen pública de internet</div>
          </div>
          
          <div class="mb-3">
            <p class="text-center">- O -</p>
          </div>
          
          <div class="mb-3">
            <%= f.label :file, "Subir imagen desde tu dispositivo" %>
            <%= f.file_field :file, class: "form-control", accept: "image/*" %>
          </div>
        </div>
      </div>
      
      <div class="mb-3">
        <%= f.label :hashtag_list, "Hashtags (opcional)" %>
        <%= f.text_field :hashtag_list, class: "form-control", placeholder: "Escribe hashtags separados por comas (sin #)" %>
        <div class="form-text">Ejemplo: naturaleza, viajes, comida</div>
      </div>
      
      <%= f.hidden_field :user_id, value: current_user.id %>
      
      <div class="text-end">
        <%= link_to "Cancelar", posts_path, class: "btn btn-outline-secondary me-2" %>
        <%= f.submit "Publicar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
