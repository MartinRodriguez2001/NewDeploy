<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Mis conversaciones</h5>
        </div>
        <div class="card-body">
          <% if @users.any? %>
            <div class="list-group">
              <% @users.each do |user| %>
                <%= link_to chat_path(user), class: "list-group-item list-group-item-action d-flex align-items-center" do %>
                  <% if user.profile_picture.attached? %>
                    <%= image_tag user.profile_picture, class: "user-avatar-sm me-3", style: "width: 40px; height: 40px; object-fit: cover; border-radius: 50%;" %>
                  <% elsif user.photo_profile.present? %>
                    <img src="<%= user.photo_profile %>" class="user-avatar-sm me-3" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;">
                  <% else %>
                    <i class="bi bi-person-circle me-3" style="font-size: 40px;"></i>
                  <% end %>
                  <div>
                    <strong><%= user.user_name %></strong>
                    <p class="mb-0 text-muted small">Iniciar conversación</p>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
              <h4 class="mt-3">No hay usuarios para chatear</h4>
              <p class="text-muted">Podrás iniciar conversaciones cuando haya otros usuarios en la plataforma.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
