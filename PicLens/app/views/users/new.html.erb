<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow p-4" style="min-width: 350px; max-width: 400px;">
    <div class="text-center mb-3">
      <span class="gradient-text fs-2 fw-bold">PicLens</span>
    </div>
    <h3 class="text-center mb-4">Crear cuenta</h3>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @user, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :user_name, "Nombre de usuario", class: "form-label" %>
        <%= f.text_field :user_name, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
      <%= f.submit "Registrarse", class: "btn btn-success w-100 fw-bold" %>
    <% end %>
    <div class="text-center mt-3">
      ¿Ya tienes cuenta?
      <%= link_to "Inicia sesión", login_path, class: "fw-bold" %>
    </div>
  </div>
</div>
