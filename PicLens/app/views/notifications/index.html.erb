<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Notificaciones</h2>
        <% if @notifications.unread.any? %>
          <%= button_to mark_all_as_read_notifications_path, method: :post, class: "btn btn-outline-primary" do %>
            <i class="bi bi-check2-all"></i> Marcar todas como leídas
          <% end %>
        <% end %>
      </div>

      <div id="notifications">
        <% if @notifications.any? %>
          <% @notifications.each do |notification| %>
            <div class="card mb-3 <%= 'border-primary' unless notification.read? %>">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <p class="card-text mb-1">
                      <%= notification.message %>
                    </p>
                    <small class="text-muted">
                      <%= time_ago_in_words(notification.created_at) %>
                    </small>
                  </div>
                  <% unless notification.read? %>
                    <div class="notification-badge"></div>
                  <% end %>
                </div>
                <div class="mt-2">
                  <%= link_to "Ver", notification_path(notification), class: "btn btn-sm btn-outline-primary" %>
                  <% unless notification.read? %>
                    <%= button_to "Marcar como leída", mark_as_read_notification_path(notification), 
                                method: :post, 
                                class: "btn btn-sm btn-outline-secondary" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="text-center my-4">
            <%= paginate @notifications %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-bell-slash fs-1 text-muted"></i>
            <p class="mt-3 text-muted">No tienes notificaciones</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= content_for :head do %>
  <%= javascript_include_tag "notifications", "data-turbo-track": "reload" %>
<% end %>
